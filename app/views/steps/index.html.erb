<div data-controller="counter" class="max-w-md mx-auto p-10 bg-white rounded-lg shadow-lg">
  <h1 class="text-2xl font-bold mb-4">Step Counter</h1>
  
  <div class="text-center mb-6">
    <span class="text-5xl font-bold" data-counter-target="count">0</span>
    <p class="text-gray-600">steps</p>
  </div>
  
  <div class="flex justify-center gap-4 mb-6">
    <button data-action="counter#decrement"
            class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">
      -1
    </button>
    
    <button data-action="counter#increment"
            class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600">
      +1
    </button>
  </div>

  <button data-action="counter#reset"
          class="w-full px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">
    Reset
  </button>
</div>